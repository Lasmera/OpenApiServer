{
    "mockServerHost": "http://localhost:35200",
    "routes": [
        {
            "path": ".*",
            "method": "any",

            "handler": "default",
            "validate": "all",
            "delay": 100,
            "proxy": "http://localhost:8080",
            "mock": "merge",


            "pipeline": [
                {
                    "handler": "validateRequest"
                },
                {
                    "handler": "delay",
                    "value": 0
                },
                {
                    "disable": true,
                    "handler": "merge",
                    "handlers": [
                        {
                            "handler": "mock"
                        },
                        {
                            "handler": "proxy"
                        }
                    ]
                },
                {
                    "handler": "mock"
                },
                {
                    "disable": true,
                    "handler": "proxy",
                    "host": ""
                },
                {
                    "handler": "validateResponse"
                }
            ]
        }
    ]
}